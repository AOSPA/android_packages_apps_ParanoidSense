<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:androidprv="http://schemas.android.com/apk/prv/res/android">

    <style name="Theme.Sense" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:background">@color/theme_background</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorPrimaryVariant">@color/theme_primary</item>
        <item name="colorOnPrimary">@color/theme_primary</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="*android:colorAccentPrimary">@color/theme_accent_primary</item>
        <item name="*android:colorAccentSecondary">@color/theme_accent_secondary</item>
        <item name="*android:colorAccentTertiary">@color/theme_accent_tertiary</item>
        <item name="*android:colorAccentPrimaryVariant">@color/theme_accent_primary_variant</item>
        <item name="*android:colorAccentSecondaryVariant">@color/theme_accent_secondary_variant</item>
        <item name="*android:colorAccentTertiaryVariant">@color/theme_accent_tertiary_variant</item>
        <item name="colorSecondary">@color/theme_accent_200</item>
        <item name="colorSecondaryVariant">@color/theme_accent_700</item>
        <item name="colorOnSecondary">@color/theme_accent_200</item>
        <item name="colorSurface">@*android:color/surface_light</item>
        <item name="android:windowLightStatusBar">@bool/theme_is_light</item>
        <item name="android:windowLightNavigationBar">@bool/theme_is_light</item>
        <item name="android:textColorLink">@color/theme_primary</item>
        <item name="materialAlertDialogTheme">@style/Theme.Sense.Dialog</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Sense.NoActionBar" parent="Theme.Sense">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/theme_primary</item>
        <item name="android:navigationBarColor">@color/theme_primary</item>
    </style>

    <style name="Theme.Sense.Header">
        <item name="android:src">@drawable/ic_face_header</item>
    </style>

    <style name="Widget.Sense.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="enforceTextAppearance">false</item>
        <item name="android:maxWidth">320dp</item>
        <item name="backgroundTint">@color/theme_accent</item>
        <item name="android:padding">14dp</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">6dp</item>
        <item name="android:textAppearance">@style/Sense.TextAppearance.LabelLarge</item>
        <item name="rippleColor">@color/button_ripple_color_selector</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="Sense.TextAppearance.LabelLarge" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.00714286</item>
    </style>

    <style name="Theme.Sense.DayNightDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog"/>

    <style name="Theme.Sense.Dialog" parent="@style/Theme.Sense.DayNightDialog">
        <item name="android:buttonCornerRadius">28dp</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.Sense.Dialog.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.Sense.Dialog.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Theme.Sense.Dialog.Button</item>
        <item name="android:colorBackground">?androidprv:attr/colorSurface</item>
    </style>

    <style name="Theme.Sense.Dialog.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/theme_accent</item>
        <item name="android:textColor">@color/theme_accent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
